enum Permission {
  SUBSCRIBER
  AUTHOR
  EDITOR
  TEAM_ADMIN
  ADMIN
}

enum ContentType {
  AUDIO
  VIDEO
  DOCUMENT
  GRAPHIC
  TEACHING_MATERIAL
  PACKAGE
}

enum ProjectType {
  LANGUAGE 
  SOCIAL_MEDIA
}

enum PackageType {
  DAILY_GUIDANCE
}

enum VideoBurnedInStatus {
  SUBTITLED
  CAPTIONED
  CLEAN
}

enum VideoQuality {
  WEB
  BROADCAST
}

enum ImageQuality {
  WEB
  PRINT
}

enum PublishStatus {
  DRAFT
  PUBLISHING 
  PUBLISH_FAILURE 
  UNPUBLISH_FAILURE 
  PUBLISH_SUCCESS 
  UNPUBLISH_SUCCESS 
  PUBLISHED
  EMBARGOED
}

enum Visibility {
  INTERNAL
  PUBLIC
}

enum TextDirection {
  LTR
  RTL
}

enum ThumbnailSize {
  SMALL
  MEDIUM
  LARGE
  FULL
}

enum Copyright {
  COPYRIGHT
  NO_COPYRIGHT
}

type GraphicStyle {
  id: ID! @id
  name: String!
}

type SocialPlatform {
  id: ID! @id
  name: String!
}

type Country {
  id: ID! @id
  name: String!
  abbr: String!
  region: Region @relation(onDelete: SET_NULL)
}

type Region {
  id: ID! @id
  name: String!
  abbr: String!
  countries: [Country] @scalarList(strategy: RELATION)
}

type Office {
  id: ID! @id
  name: String!
  abbr: String!
  bureau: Bureau @relation(onDelete: SET_NULL)
}

type Bureau {
  id: ID! @id
  name: String!
  abbr: String!
  offices: [Office] @scalarList(strategy: RELATION)
}

type User {
  id: ID! @id
  firstName: String!
  lastName: String!
  email: String! @unique
  password: String
  tempToken: String
  tempTokenExpiry: Float
  jobTitle: String
  country: String
  city: String
  howHeard: String
  permissions: [Permission!]! @scalarList(strategy: RELATION)
  team: Team
  isConfirmed: Boolean! @default(value: false)
}

type Team {
  id: ID! @id
  name: String! @unique
  organization: String!
  members: [User]
  contentTypes: [ContentType] @scalarList(strategy: RELATION)
  isConfirmed: Boolean! @default(value: false)
}

type Language {
  id: ID! @id
  languageCode: String!
  locale: String! @unique
  textDirection: TextDirection! @default(value: LTR)
  displayName: String!
  nativeName: String!
}

# translations prop required as we need at least the English translation to create a category
type Category {
  id: ID! @id
  translations: [LanguageTranslation!]!
}

# translations prop required as we need at least the English translation to create a category
type Tag {
  id: ID! @id
  translations: [LanguageTranslation!]!
}

type LanguageTranslation {
  id: ID! @id
  name: String!
  language: Language
}

type Thumbnail {
  id: ID! @id
  size: ThumbnailSize @default(value: FULL)
  image: ImageFile
}

type DocumentConversionFormat {
  id: ID! @id
  rawText: String
  html: String
  markdown: String
}

# NOTE: we can add other arrays in addition to the documents arrays
# for packages that contain other content types, i.e. images
type Package {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  publishedAt: DateTime
  type: PackageType!
  title: String!
  assetPath: String
  author: User
  team: Team
  desc:  String
  status: PublishStatus @default(value: DRAFT)
  visibility: Visibility @default(value: INTERNAL)
  categories: [Category]
  tags: [Tag]
  documents: [DocumentFile] 
}

type GraphicProject {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  publishedAt: DateTime
  type: ProjectType! @default(value: SOCIAL_MEDIA)
  title: String!
  copyright: Copyright @default(value: COPYRIGHT)
  alt: String
  descPublic: String
  descInternal: String
  assetPath: String
  author: User
  team: Team
  status: PublishStatus @default(value: DRAFT)
  visibility: Visibility @default(value: PUBLIC)
  supportFiles: [SupportFile] @relation(onDelete: CASCADE)
  images: [ImageFile] @relation(onDelete: CASCADE)
  categories: [Category]
  tags: [Tag]  
}


type VideoProject {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  publishedAt: DateTime
  projectType: ProjectType! @default(value: LANGUAGE)
  projectTitle: String!
  descPublic: String
  descInternal: String
  assetPath: String
  author: User #[User|Author] # more than 1 author?
  team: Team
  status: PublishStatus @default(value: DRAFT)
  visibility: Visibility @default(value: PUBLIC)
  units: [VideoUnit] @relation(onDelete: CASCADE)
  supportFiles: [SupportFile] @relation(onDelete: CASCADE)
  thumbnails: [ImageFile] @relation(onDelete: CASCADE)
  categories: [Category]
  tags: [Tag]
}

type VideoUnit {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  language: Language
  title: String!
  descPublic: String
  files: [VideoFile] @relation(onDelete: CASCADE)
  tags: [Tag]
  categories: [Category]
  thumbnails: [Thumbnail] @relation(onDelete: CASCADE)
}

type VideoStream {
  id: ID! @id
  site: String # You Tube, Vimeo
  url: String
  embedUrl: String # verify that this is needed
}

type Dimensions {
  id: ID! @id
  width: Int
  height: Int
}


# Press Guidance, meeting note
type DocumentUse {
  id: ID! @id
  name: String! @unique
}

# Full video,promotional teaser, etc
type VideoUse {
  id: ID! @id
  name: String! @unique
}

# thumbnail/cover image, email graphic etc
type ImageUse {
  id: ID! @id
  name: String! @unique
}

type SupportFileUse {
  id: ID! @id
  name: String! @unique
}

type VideoFile {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  language: Language
  filetype: String
  filename: String
  visibility: Visibility @default(value: PUBLIC)
  use: VideoUse
  quality: VideoQuality
  videoBurnedInStatus: VideoBurnedInStatus
  url: String
  signedUrl: String 
  md5: String 
  duration: Float
  bitrate: Float
  filesize: Float
  dimensions: Dimensions
  stream: [VideoStream] @relation(onDelete: CASCADE)
}

type ImageFile {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  visibility: Visibility @default(value: PUBLIC)
  language: Language
  dimensions: Dimensions
  url: String
  signedUrl: String
  alt: String
  longdesc: String
  caption: String
  title: String
  filename: String
  filetype: String
  filesize: Float
  use: ImageUse
  md5: String
  quality: ImageQuality @default(value: WEB)
  style: GraphicStyle
  social: [SocialPlatform]
}

type SupportFile {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  language: Language!
  url: String
  signedUrl: String
  md5: String
  filename: String
  filetype: String # srt, pdf
  filesize: Float
  visibility: Visibility @default(value: PUBLIC)
  editable: Boolean @default(value: false)
  use: SupportFileUse
}

type DocumentFile {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  publishedAt: DateTime
  title: String
  language: Language
  filetype: String
  filename: String
  filesize: Float
  status: PublishStatus @default(value: DRAFT)
  excerpt: String
  content: DocumentConversionFormat
  image: [ImageFile] @relation(onDelete: CASCADE)
  url: String
  signedUrl: String
  visibility: Visibility @default(value: INTERNAL)
  use: DocumentUse
  bureaus: [Bureau]
  countries: [Country]
  categories: [Category]
  tags: [Tag]
}
